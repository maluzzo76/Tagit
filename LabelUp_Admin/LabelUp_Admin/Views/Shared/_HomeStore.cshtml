
@Html.Partial("_customError")
<div class="container-fluid" style="overflow: auto; height: 68vh;">
    <div class="row">
        <div class="d-flex justify-content-center">
            <div style="background-image: url('http://www.tagit.ar/Content/imagenes/site/bckg_banner.png'); background-repeat: repeat; ">
                <img class="responsive" src="~/Content/imagenes/site/banners/img_banner_home.png" />
            </div>
            <div class="col-md-12">
                <div class="container ">
                    <div class="row titulo  ">
                        <div><h4>Algunas propuestas pensadas para vos...</h4></div>
                        <div><h6>Podes personalizar segun tus gustos y necesidades</h6></div>
                    </div>
                    <div class="d-flex justify-content-center">
                        @foreach (var items in (IList<LabelUp_Admin.Models.tbl_Productos>)ViewBag.ProductoStore)
                        {

                            <div class="col-md-3" style="width:350px ">
                                <div class="card" style="background-color: #ffffff;">
                                    <a href="@Url.Action("step1", "Store", new { id = items.Id })">
                                        <img class="card-img-top" src="@Href(@items.tbl_Imagenes.URI)" style=" width:250px; height:190px " />
                                    </a>
                                    <div class="card-body" style="height:70px; overflow:auto">
                                        <h4 class="card-title">@items.Nombre</h4>
                                    </div>
                                </div>
                                <br />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



