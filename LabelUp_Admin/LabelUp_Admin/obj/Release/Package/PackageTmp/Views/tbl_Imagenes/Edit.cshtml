@model LabelUp_Admin.Models.tbl_Imagenes

@{
    ViewBag.Title = "Edit";
}

<h2>Editando Imagen @Model.Nombre</h2>

<div>
    <img class="card-img-top " style="width:100px; height:100px;" src="@Href(Model.URI)" alt="@Model.Nombre">
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Grupo</div>
        <div class="col-md-10">
            @Html.DropDownList("Id_GrupoImagen", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Id_GrupoImagen, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" onload="selectGrupo('ok')">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-info" })
        </div>
    </div>

    <div class="form-group invisible">
        @Html.LabelFor(model => model.Actio, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Actio)
                @Html.ValidationMessageFor(model => model.Actio, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group invisible">
        @Html.LabelFor(model => model.URI, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.URI, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.URI, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group invisible">
        @Html.LabelFor(model => model.Tamanio, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tamanio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tamanio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group invisible">
        @Html.LabelFor(model => model.Extencion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Extencion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Extencion, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
}

<script>
    function selectGrupo(value) {
        alert(value);
    }
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

