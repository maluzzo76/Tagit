@{
    ViewBag.Title = "Contact";
}
@Html.Partial("_customError")
<div class="container mt-3 Contact">
    <h1>Formulario de contacto</h1>
    <h6>Completá los campos y pronto nos comunicaremos para resolver tu consulta</h6>
    <form class="" action="ContactSend">
        <div class="row ">
            <div class="col-md-6 ">
                <p>Nombre y Apellido*</p>
                <input id="Nombre" name="Nombre" />
                <p>Email*</p>
                <input id="Email" name="Email" type="email" />
                <p>Celular*</p>
                <input id="Phone" name="Phone" />
            </div>
            <div class="col-md-6">
                <p>Consulta*</p>
                <textarea id="Consulta" name="Consulta" cols="80" rows="7"></textarea>
            </div>
        </div>
        <button type="submit" class="">Enviar Consulta</button>
    </form>
</div>